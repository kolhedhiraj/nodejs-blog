extends layout

block content
	div.col-md-4.col-md-offset-4.login-bg#flipthis
		h3.login-margin 登录到
			b LEONOTE
		form(action='#', method='post').login-margin
			p.input-group
				span.input-group-addon
					b 邮箱
				input(text='text', name='email').form-control.input-lg
			p.input-group
				span.input-group-addon
					b 密码
				input(text='password', name='password').form-control.input-lg
			p.help-block.text-center.login-margin
				p.text-center
					button(type='submit').btn.btn-primary.btn-lg &nbsp;&nbsp;登&nbsp;&nbsp;录&nbsp;&nbsp;
		div.login-margin.text-right
			small.text-muted
				a#register 还没有帐号? 注册一个


	div(style='display:none').col-md-4.col-md-offset-4#back
		h3.login-margin
			span 注册
			b LEONOTE
			span 账号
		form(action='#', method='post').login-margin
			p.input-group
				span.input-group-addon
					b 邮箱
				input(text='text', name='email').form-control.input-lg
			p.input-group
				span.input-group-addon
					b 昵称
				input(text='text', name='username').form-control.input-lg
			p.input-group
				span.input-group-addon
					b 输入密码
				input(text='password').form-control.input-lg
			p.input-group
				span.input-group-addon
					b 确认密码
				input(text='password', name='password').form-control.input-lg
			p.help-block.text-center.login-margin
				p.text-center.span3
					button(type='submit').btn.btn-primary.btn-lg &nbsp;&nbsp;注&nbsp;&nbsp;册&nbsp;&nbsp;
block scripts
	script(type='text/javascript', src='/javascripts/flippant.js')
	script.
		var front = document.getElementById('flipthis')
			, back_content = document.getElementById('back').innerHTML
			, back

		$('#register').click(function() {
			flippant.flip(front, back_content, 'card', 'login-bg')
		});